{
  "watch": ["apps/api/src/**/*", "apps/api/index.ts", "apps/api/.env"],
  "ext": "ts,js,json",
  "ignore": [
    "apps/api/node_modules/**/*",
    "apps/api/dist/**/*",
    "apps/api/logs/**/*",
    "apps/api/backups/**/*",
    "apps/api/coverage/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "exec": "cd apps/api && npx ts-node index.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 1000
}
